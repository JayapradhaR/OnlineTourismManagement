<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        header {
            height: 50px;
            width: 100%;
            background-color: yellowgreen;
        }
    </style>
</head>
<body>
    <header style="text-align:center">
        <h1>Online Tourism Management</h1>
    </header>
    <div style="text-align:right">
        @Html.ActionLink("Home", "Home","Homepage") &nbsp;&nbsp;
        @Html.ActionLink("Sign In", "SignIn","User") &nbsp;&nbsp;
        @Html.ActionLink("Sign Up", "SignUp","User")
    </div>
    <div>
        @RenderBody()
    </div>
    <footer style="text-align:center;background-color:yellowgreen">
        Time To Travel
    </footer>

</body>
</html>



