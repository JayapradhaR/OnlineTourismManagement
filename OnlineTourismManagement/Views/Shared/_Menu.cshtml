<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>*@

    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/styles/Styles.css" />
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>
<body>
    <header>
        <div style="max-width:200px;">
            <img src="~/Images/logo.jpg" alt="Logo" class="view-image" @*width="300" height="100"*@ />
            <br />
            @*<span class="phone">+91 8270424607</span>*@
        </div>
    </header>
    @*<br />  <br />*@
<div class="link">
    @Html.ActionLink("Home", "Home", "Homepage", null, new { @class = "menu" })

    <span>@Html.ActionLink("Packages", "ViewPackageType", "PackageType", null, new { @class = "menu" })</span>


    @if (HttpContext.Current.User.IsInRole("Admin"))
    {
        <span> @Html.ActionLink("Package", "ViewPackage", "Package", null, new { @class = "menu" }) </span>

        <span> @Html.ActionLink("Package type", "ViewPackageType", "PackageType", null, new { @class = "menu" }) </span>

        <span> @Html.ActionLink("Customers", "Index", "Account", null, new { @class = "menu" })</span>
    }
    @if (HttpContext.Current.User.IsInRole("User"))
    {
        //<span>@Html.ActionLink("Packages", "ViewPackageType", "PackageType", null, new { @class = "menu" })</span>

        <span>@Html.ActionLink("Giftcards", "ViewGiftCardTypes", "GiftCardType", null, new { @class = "menu" })</span>
    }

    @if (HttpContext.Current.User.Identity.IsAuthenticated)
    {
        <span> @Html.ActionLink("Logout", "LogOut", "Account", null, new { @class = "menu" }) </span>
    }
    else
    {
        <span> @Html.ActionLink("Register", "SignUp", "Account", null, new { @class = "menu" })</span>
        <span> @Html.ActionLink("SignIn", "SignIn", "Account", null, new { @class = "menu" }) </span>
    }

</div>
    @*<br /><br />*@
    
<div>
    @RenderBody()
</div>
</body>
</html>



