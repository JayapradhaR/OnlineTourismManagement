@model OnlineTourismManagement.Models.UserSignIn

@{
    ViewBag.Title = "SignIn";
}

@Html.Partial("_Content")

    <link rel="stylesheet" type="text/css" href="~/styles/Styles.css" />

@if (TempData["Message"] != null)
{
    @Html.Label((string)TempData["Message"], new { @class = "heading" })
}
@using (Html.BeginForm("SignIn", "User", FormMethod.Post))
{
    <table cellpadding="10" align="center">
        <tr>
            <td>
                @Html.Label("Username")
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.MailId)
                @Html.ValidationMessageFor(Model=>Model.MailId,"",new { @class="error"})
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Password")
            </td>
            <td>
                @Html.PasswordFor(Model => Model.Password)
                @Html.ValidationMessageFor(Model=>Model.Password,"",new { @class="error"})
            </td>
        </tr>
        <tr>
            <td>
                <input type="Submit" />
            </td>
        </tr>
    </table>
}

