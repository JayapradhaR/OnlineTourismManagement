@model OnlineTourismManagement.Models.PackageViewModel

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm("Update", "Package", FormMethod.Post))
{
    @Html.HiddenFor(Model=>Model.PackageId)
<table cellpadding="10" align="center">
    <tr>
        <td>
            @Html.LabelFor(Model => Model.PackageName)
        </td>
        <td>
            @Html.EditorFor(Model => Model.PackageName)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(Model => Model.PackagePrice)
        </td>
        <td>
            @Html.EditorFor(Model => Model.PackagePrice)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(Model => Model.PackageType)
        </td>
        <td>
            @Html.EditorFor(Model => Model.PackageType)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(Model => Model.CreationDate)
        </td>
        <td>
            @Html.EditorFor(Model => Model.CreationDate)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(Model => Model.UpdationDate)
        </td>
        <td>
            @Html.EditorFor(Model => Model.UpdationDate)
        </td>
    </tr>
    <tr>
        <td>
            @Html.ActionLink("Cancel", "ViewPackage")
        </td>
        <td>
            <input type="submit" value="Update" />
        </td>
    </tr>
</table>
}

